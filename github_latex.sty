\begin{frame}[fragile]{Basic Commands}
\begin{lstlisting}[language=bash]
# Change directory
cd Users\username\Documents\github_intro

# Create directory
mkdir github_notes

# Create multiple folders
mkdir github_notes github_lecture_notes

# Create empty files
touch notes.html lecture_notes.txt
\end{lstlisting}
\end{frame}

\begin{frame}{Git Configuration}
\begin{lstlisting}[language=bash]
# Configure Git globally
git config --global user.email "your.email@example.com"
git config --global user.name "Your Name"
\end{lstlisting}
\end{frame}

\begin{frame}{Cloning a Repository}
\begin{itemize}
    \item Navigate to repository on GitHub
    \item Click "Code" button
    \item Copy HTTPS/SSH URL
\end{itemize}
\includegraphics[height=0.4\textheight]{Images/download_code.png}
\end{frame}

\begin{frame}[fragile]{Basic Git Commands}
\begin{lstlisting}[language=bash]
# Clone repository
git clone <repository-url>

# Initialize new repository
git init

# Stage changes
git add .

# Commit changes
git commit -m "Your commit message"

# Push changes
git push
\end{lstlisting}
\end{frame}

\begin{frame}{Creating New Repository}
\begin{itemize}
    \item Log into GitHub
    \item Click "+" and "New repository"
    \item Fill repository details
    \item Follow command line instructions to push existing repository
\end{itemize}
